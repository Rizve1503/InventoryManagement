@model LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<InventoryManagement.WebApp.Controllers.AccountController> Localizer

@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = Localizer["Sign In"];
}

<div class="account-card">
    <h1>@Localizer["Sign In"]</h1>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="form-group">
            <label asp-for="Email">@Localizer["Email"]</label>
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">@Localizer["Password"]</label>
            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input class="form-check-input" asp-for="RememberMe" />
            <label class="form-check-label" asp-for="RememberMe">@Localizer["Remember me?"]</label>
        </div>
        <div class="form-group">
            <button id="login-submit" type="submit" class="btn btn-primary">@Localizer["Sign In"]</button>
        </div>
    </form>

    <div class="social-login-divider">or continue with</div>

    <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="social-login-buttons">
            <button type="submit" class="social-login-btn" name="provider" value="Google" title="Continue with Google">
                <img src="~/images/Google.png" alt="Google Login" />
            </button>
            <button type="submit" class="social-login-btn" name="provider" value="GitHub" title="Continue with GitHub">
                <img src="~/images/GitHub.png" alt="GitHub Login" />
            </button>
        </div>
    </form>

    <div class="account-links">
        <p>
            @Localizer["Don't have an account?"] <a asp-action="Register">@Localizer["Create one"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}