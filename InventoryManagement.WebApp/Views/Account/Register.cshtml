@model RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<InventoryManagement.WebApp.Controllers.AccountController> Localizer

@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewData["Title"] = Localizer["Create Account"];
}

<div class="account-card">
    <h1>@Localizer["Create Account"]</h1>
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="form-group">
            <label asp-for="Name">@Localizer["Name"]</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">@Localizer["Email"]</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">@Localizer["Password"]</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">@Localizer["Confirm password"]</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">@Localizer["Create Account"]</button>
        </div>
    </form>

    <div class="social-login-divider">@Localizer["or register with"]</div>

    <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
        <div class="social-login-buttons">
            <button type="submit" class="social-login-btn" name="provider" value="Google" title="Continue with Google">
                <img src="~/images/Google.png" alt="Google Login" />
            </button>
            <button type="submit" class="social-login-btn" name="provider" value="GitHub" title="Continue with GitHub">
                <img src="~/images/GitHub.png" alt="GitHub Login" />
            </button>
        </div>
    </form>

    <div class="account-links">
        <p>@Localizer["Already have an account?"] <a asp-action="Login">@Localizer["Sign In"]</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}