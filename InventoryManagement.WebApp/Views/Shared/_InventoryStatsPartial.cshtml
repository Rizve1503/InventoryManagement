@model InventoryStatsViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="row">
    <div class="col-md-12">
        <h4>Overall</h4>
        <p><strong>@Localizer["Total Items in Inventory:</strong> @Model.TotalItems"]</p>
    </div>
</div>
<hr />

@if (Model.NumericStats.Any())
{
    <div class="row mt-3">
        <div class="col-md-12">
            <h4>@Localizer["Numeric Field Statistics"]</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Localizer["Field Name"]</th>
                        <th>@Localizer["Average"]</th>
                        <th>@Localizer["Minimum"]</th>
                        <th>@Localizer["Maximum"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in Model.NumericStats)
                    {
                        <tr>
                            <td>@stat.FieldName</td>
                            <td>@stat.Average.ToString("N2")</td>
                            <td>@stat.Min.ToString("N2")</td>
                            <td>@stat.Max.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <hr />
}

@if (Model.StringStats.Any())
{
    <div class="row mt-3">
        <div class="col-md-12">
            <h4>@Localizer["String Field Statistics"]</h4>
            <table class="table">
                <thead>
                    <tr>
                            <th>@Localizer["Field Name"]</th>
                            <th>@Localizer["Most Frequent Value"]</th>
                            <th>@Localizer["Count"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in Model.StringStats)
                    {
                        <tr>
                            <td>@stat.FieldName</td>
                            <td>"@stat.MostFrequentValue"</td>
                            <td>@stat.Frequency</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (!Model.NumericStats.Any() && !Model.StringStats.Any())
{
    <p class="text-muted mt-3">@Localizer["No statistics to display. This inventory may not have any items or configured numeric/string fields."]</p>
}