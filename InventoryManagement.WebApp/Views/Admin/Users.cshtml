@model UserListViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<InventoryManagement.WebApp.Controllers.AdminController> AdminLocalizer

@{
    ViewData["Title"] = AdminLocalizer["User Management"];
    var currentUserId = int.Parse(User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier));
}

<h1>@AdminLocalizer["User Management"]</h1>
<p>@AdminLocalizer["Manage user accounts, roles, and access."]</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>@AdminLocalizer["Name"]</th>
            <th>@AdminLocalizer["Email"]</th>
            <th>@AdminLocalizer["Role"]</th>
            <th>@AdminLocalizer["Status"]</th>
            <th>@AdminLocalizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.RoleName</td>
                <td>
                    @if (user.IsBlocked)
                    {
                        <span class="badge bg-danger">@AdminLocalizer["Blocked"]</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@AdminLocalizer["Active"]</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="ToggleBlockUser" method="post" class="me-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm @(user.IsBlocked ? "btn-success" : "btn-warning")">
                                @(user.IsBlocked? AdminLocalizer["Unblock"] : AdminLocalizer["Block"])
                            </button>
                        </form>

                        <form asp-action="ToggleAdminRole" method="post" class="me-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-info">
                                @(user.RoleName == "Admin" ? AdminLocalizer["Remove Admin"] : AdminLocalizer["Make Admin"])
                            </button>
                        </form>

                        <form asp-action="DeleteUser" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    @(user.Id == currentUserId ? "disabled" : "")
                                    onclick="return confirm('@AdminLocalizer["Are you sure you want to delete this user? This cannot be undone."]');">
                                @AdminLocalizer["Delete"]
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>