@model UserListViewModel

@{
    ViewData["Title"] = "User Management";
    var currentUserId = int.Parse(User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier));
}

<h1>@ViewData["Title"]</h1>
<p>Manage user accounts, roles, and access.</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.RoleName</td>
                <td>
                    @if (user.IsBlocked)
                    {
                        <span class="badge bg-danger">Blocked</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="ToggleBlockUser" method="post" class="me-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm @(user.IsBlocked ? "btn-success" : "btn-warning")">
                                @(user.IsBlocked ? "Unblock" : "Block")
                            </button>
                        </form>

                        <form asp-action="ToggleAdminRole" method="post" class="me-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-info">
                                @(user.RoleName == "Admin" ? "Remove Admin" : "Make Admin")
                            </button>
                        </form>

                        <form asp-action="DeleteUser" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    @(user.Id == currentUserId ? "disabled" : "")
                                    onclick="return confirm('Are you sure you want to delete this user? This cannot be undone.');">
                                Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>