@model UserListViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<InventoryManagement.WebApp.Controllers.AdminController> Localizer

@{
    ViewData["Title"] = Localizer["User Management"];
    var currentUserId = int.Parse(User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier));
}

<h1>@Localizer["User Management"]</h1>
<p>@Localizer["Manage user accounts, roles, and access."]</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["Role"]</th>
            <th>@Localizer["Status"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.RoleName</td>
                <td>
                    @if (user.IsBlocked)
                    {
                        <span class="badge bg-danger">@Localizer["Blocked"]</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@Localizer["Active"]</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <form asp-action="ToggleBlockUser" method="post" class="me-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm @(user.IsBlocked ? "btn-success" : "btn-warning")">
                                @(user.IsBlocked? Localizer["Unblock"] : Localizer["Block"])
                            </button>
                        </form>

                        <form asp-action="ToggleAdminRole" method="post" class="me-1">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-info">
                                @(user.RoleName == "Admin" ? Localizer["Remove Admin"] : Localizer["Make Admin"])
                            </button>
                        </form>

                        <form asp-action="DeleteUser" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    @(user.Id == currentUserId ? "disabled" : "")
                                    onclick="return confirm('@Localizer["Are you sure you want to delete this user? This cannot be undone."]');">
                                @Localizer["Delete"]
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>