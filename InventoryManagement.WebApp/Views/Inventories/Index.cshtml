@model IEnumerable<InventoryManagement.Domain.Entities.Inventory>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<InventoryManagement.WebApp.Controllers.InventoriesController> InventoriesLocalizer

@{
    ViewData["Title"] = InventoriesLocalizer["My Inventories"];
    var viewType = ViewBag.ViewType as string ?? "list";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@InventoriesLocalizer["My Inventories"]</h1>
    <div>
        <div class="btn-group" role="group">
            <button id="list-view-btn" type="button" class="btn @(viewType == "list" ? "btn-primary" : "btn-outline-primary")"><i class="bi bi-list-ul"></i></button>
            <button id="card-view-btn" type="button" class="btn @(viewType == "card" ? "btn-primary" : "btn-outline-primary")"><i class="bi bi-grid-3x3-gap-fill"></i></button>
        </div>
        <a asp-action="Create" class="btn btn-success ms-2">@InventoriesLocalizer["Create New Inventory"]</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5"><p class="lead">@InventoriesLocalizer["You haven't created any inventories yet."]</p></div>
}
else
{
    @if (viewType == "list")
    {
        <table class="table table-hover align-middle">
            <thead class="thead-light">
                <tr>
                    <th>@InventoriesLocalizer["Title & Description"]</th>
                    <th>@InventoriesLocalizer["Status"]</th>
                    <th>@InventoriesLocalizer["Items"]</th>
                    <th>@InventoriesLocalizer["Created"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="inventory-container">
                <partial name="_InventoryListPartial" model="Model" />
            </tbody>
        </table>
    }
    else
    {
        <div id="inventory-container" class="row">
            <partial name="_InventoryCardPartial" model="Model" />
        </div>
    }

    @if (ViewBag.HasMoreInventories == true)
    {
        <div id="loading-indicator" class="text-center my-4" style="display: none;">
            <div class="spinner-border text-primary" role="status"><span class="visually-hidden">@InventoriesLocalizer["Loading"]...</span></div>
        </div>
    }
}

@section Scripts {
    <script>
        $(document).ready(function () {
            let page = 2;
            let isLoading = false;
            let hasMore = @(ViewBag.HasMoreInventories.ToString().ToLower());
            let currentView = '@viewType';

            function setViewType(view) {
                document.cookie = `InventoryViewType=${view}; path=/; max-age=31536000`;
                window.location.reload();
            }

            $('#list-view-btn').on('click', function() { if (currentView !== 'list') setViewType('list'); });
            $('#card-view-btn').on('click', function() { if (currentView !== 'card') setViewType('card'); });

            $(window).scroll(function () {
                if ($(window).scrollTop() + $(window).height() >= $(document).height() - 200 && !isLoading && hasMore) {
                    isLoading = true;
                    $('#loading-indicator').show();

                    // This AJAX call now correctly sends the viewType
                    const ajaxUrl = `/Inventories/GetInventoriesPage?page=${page}&viewType=${currentView}`;

                    // The controller will return the correct partial, which is appended here
                    $.get(ajaxUrl, function (data) {
                        if (data.trim().length > 0) {
                            $('#inventory-container').append(data);
                            page++;
                        } else {
                            hasMore = false;
                        }
                    }).fail(function() {
                        hasMore = false;
                    }).always(function() {
                        isLoading = false;
                        $('#loading-indicator').hide();
                    });
                }
            });
        });
    </script>
}